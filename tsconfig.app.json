{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        /**
         * Restrict compilation to TypeScript and Svelte sources.
         */
        "allowJs": false,
        "checkJs": false,
        "isolatedModules": true,
        "moduleDetection": "force"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}
